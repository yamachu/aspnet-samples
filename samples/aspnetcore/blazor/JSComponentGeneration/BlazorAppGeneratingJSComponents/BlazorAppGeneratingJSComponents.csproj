<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\JSComponentGeneration\JSComponentGeneration.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <ReactTemplateJSDir>..\react-app-with-blazor\src</ReactTemplateJSDir>
    <VueTemplateJSDir>..\vue-app-with-blazor\src</VueTemplateJSDir>
    <BuildAssemblyOutputPath>..\JSComponentGeneration.Build\bin\$(Configuration)\netstandard2.0</BuildAssemblyOutputPath>
  </PropertyGroup>

  <Import Project="..\JSComponentGeneration.Build\build\netstandard2.0\JSComponentGeneration.build.targets" />

</Project>
